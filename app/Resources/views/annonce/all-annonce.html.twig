{% extends 'base.html.twig' %}
{% block title %}Joydays : Liste Annonce par catégorie{% endblock %}
{% block body %}  
<h1>Liste Annonces par catégorie</h1>

{% if annonces %}
	{% for categorie in categories %}
		<h2>{{ categorie.nom }}</h2>

		<ul>
			{% for annonce in annonces %}
				{% if annonce.categorie.id == categorie.id %}
				<li>{{ annonce.titre }} <a href="{{ path('main_fiche_annonce',{'id':annonce.id})}}">Voir >></a></li>
				{% endif %}
			{% endfor %}
			
		</ul>
	{% endfor %}
{% endif %}
{% endblock %}


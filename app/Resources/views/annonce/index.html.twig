{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonces list</h1>
    <ul class="list-unstyled">
    {% for key, messages in app.session.flashbag.all() %}
        <li class="alert {% if key == 'error'%}alert-danger{%else%}alert-success{% endif %}">
            {% for message in messages %}
                {%if key == 'error'%}<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span><span class="sr-only">Error:</span>{% endif%} {{ message }}
            {% endfor %}
        </li>
    {% endfor %}
    </ul>
    <table  class="table table-striped table-hover">
        <thead>
            <tr>
               
                <th>Titre</th>
                <th>Introduction</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                
                <td>{{ annonce.titre }}</td>
                <td>{{ annonce.introduction }}</td>
                <td>{{ annonce.description }}</td>
                <td>
                    <ul class="list-unstyled action">
                        <li>
                            <a href="{{ path('annonce_annonce_edit', { 'id': annonce.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
                        </li>
                        <li>
                            <a href="{{ path('annonce_annonce_delete', { 'id': annonce.id }) }}" onclick="return deleteList();"><span class="glyphicon glyphicon glyphicon-remove" aria-hidden="true" ></span> Delete</a>
                        </li>
                    </ul>
                    
                </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>
     <ul class="list-unstyled action">
        <li>
            <a href="{{ path('annonce_annonce_new') }}"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nouvelle annonce</a>
        </li>
    </ul>
    
{% endblock %}
